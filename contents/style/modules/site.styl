.stripe {
  min-width: auto;
}

.container {
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.hero {
  margin-top: 60px;
  margin-bottom: 40px;
  border-bottom: 1px solid #e4e4e4;
  padding-bottom: 30px;
}

.hero .summary {
  max-width: 500px;
  margin: 0 auto;
}

.hero .links {
  max-width: 360px;
  margin: 30px auto 0px auto;
}

.thirds-container {
  float:left;
  margin-bottom: 20px;
}

.thirds-inner {
  margin: 0px 10px;
}

.thirds-inner h2 {
  margin-top: 0px;
}

.our-sponsors {
}

.sponsor-image-mini {
  text-align: center;
}

.sponsor-image-mini img {
  max-height: 70px;
}

@media (min-width: 800px) {
  .header__blog__logo {
    float: left;
  }

  .stripe {
    min-width: 1000px;
  }

  .main {
    margin-top: -90px;
  }

  .thirds-container {
    width 33%;
    border-right: 1px solid #e4e4e4;
    margin-bottom: 0px;
    min-height: 250px;
  }

  .thirds-container.last-item {
    border-right: none;
  }
}
