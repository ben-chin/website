.stripe {
  min-width: auto;
}

.container {
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.lowpadding-wrapper {
  float:none;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30px;
}

@media (min-width: 800px) {
  .header__blog__logo {
    float: left;
  }

  .stripe {
    min-width: 1000px;
  }

  .main {
    margin-top: -90px;
  }

  .lowpadding-wrapper {
    float:left;
    margin-left: -50px;
    margin-right: -50px;
    margin-top: 30px;
  }
}
